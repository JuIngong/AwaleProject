<UserControl x:Class="AwaleProject.vue.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AwaleProject.vue"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Column="1" Grid.Row="0" FontFamily="Viner Hand ITC" FontWeight="Bold" FontSize="48">Menu</Label>
        <Button Grid.Column="1" Grid.Row="1" Margin="5" Click="OnlineGame">Online Game</Button>
        <Button Grid.Column="1" Grid.Row="2" Margin="5" Click="NewLocalGame">Local Game</Button>
        <Button Grid.Column="1" Grid.Row="3" Margin="5" Click="Button_Click">Historique</Button>
    </Grid>
</UserControl>
